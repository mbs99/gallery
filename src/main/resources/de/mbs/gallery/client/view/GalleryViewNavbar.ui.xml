<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<g:HTMLPanel>
		<div class="row">
			<div class="twelve columns" id="logo">
				<a href="https://www.atelier-fuer-bildkunst.de">
					<img src="logo.png" class="logo"/>
				</a>
			</div>
		</div>
		<div class="row">
			<div class="one-third column">
				<select id="filter">
					<option value="off">alle</option>
					<option value="1Star">1 Stern</option>
					<option value="2Stars">2 Sterne</option>
					<option value="3Stars">3 Sterne</option>
				</select>
			</div>
			<button class="button u-pull-right" id="logoutButton">Abmelden</button>
			<button class="button u-pull-right" id="orderButton">Bestellung anzeigen</button>
		</div>
	</g:HTMLPanel>

</ui:UiBinder>