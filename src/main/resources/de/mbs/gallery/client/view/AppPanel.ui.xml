<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<g:HTMLPanel>
		<g:HTMLPanel styleName="container">
			<div class="row">
				<div class="one-third column">
					<select id="filter">
						<option value="off">alle</option>
						<option value="1Star">1 Stern</option>
						<option value="2Stars">2 Sterne</option>
						<option value="3Stars">3 Sterne</option>
					</select>
				</div>
				<div class="one-third column">
					<button class="button">Auswahl speichern</button>
				</div>
				<div class="one-third column">
					<button class="button">Bestellung abschicken</button>
				</div>
			</div>
		</g:HTMLPanel>
		<g:HTMLPanel styleName="container paddingTop">
			<g:SimplePanel ui:field="contentPanel" />
		</g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder>